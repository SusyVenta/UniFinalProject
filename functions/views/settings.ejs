<!DOCTYPE html>
<html lang="en">

<head>
  <!-- SHARED HEAD -->
  <%- include('partials/sharedHead') %>

  <!-- css -->
  <link rel="stylesheet" href="/css/hero-image.css">
  <link rel="stylesheet" href="/css/generic.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="/css/settings.css">

  <!-- https://palcarazm.github.io/bootstrap5-toggle/ -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap5-toggle@5.0.4/css/bootstrap5-toggle.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap5-toggle@5.0.4/js/bootstrap5-toggle.ecmas.min.js"></script>
</head>

<body>
  <div>
    <%- include('partials/header'); %>
  </div>
  <div class="outer-container">
    <div class="toggle-container">
      <label for="friendship-accepted" class="form-label">Users accept your friendship requests</label>
      <% if (userSettings.usersAcceptYourFriendshipRequest === true) { %>
        <input id="friendship-accepted" type="checkbox" data-toggle="toggle" data-style="ios" checked>
      <% } else { %>  
        <input id="friendship-accepted" type="checkbox" data-toggle="toggle" data-style="ios">
      <% } %> 
    </div>
    <div class="toggle-container">
      <label for="friendship-accepted" class="form-label">You receive new friendship requests</label>
      <% if (userSettings.newFriendshipRequestReceived === true) { %>
        <input id="friendship-accepted" type="checkbox" data-toggle="toggle" data-style="ios" checked>
      <% } else { %>  
        <input id="friendship-accepted" type="checkbox" data-toggle="toggle" data-style="ios">
      <% } %> 
    </div>
    <div class="toggle-container">
      <label for="poll-requires-input" class="form-label">Poll requires your input</label>
      <% if (userSettings.pollRequiresInput === true) { %>
        <input id="poll-requires-input" type="checkbox" data-toggle="toggle" data-style="ios" checked>
      <% } else { %>  
        <input id="poll-requires-input" type="checkbox" data-toggle="toggle" data-style="ios">
      <% } %> 
    </div>
    <div class="toggle-container">
      <label for="your-input-required" class="form-label">Your friends request your input</label>
      <% if (userSettings.friendsRequestYourInput === true) { %>
        <input id="your-input-required" type="checkbox" data-toggle="toggle" data-style="ios" checked>
      <% } else { %>  
        <input id="your-input-required" type="checkbox" data-toggle="toggle" data-style="ios">
      <% } %>
    </div>
    <div class="toggle-container">
      <label for="new-comments" class="form-label">New comments are added to plans</label>
      <% if (userSettings.newCommentsAddedToPlans === true) { %>
        <input id="new-comments" type="checkbox" data-toggle="toggle" data-style="ios" checked>
      <% } else { %>  
        <input id="new-comments" type="checkbox" data-toggle="toggle" data-style="ios">
      <% } %>
    </div>
    <div class="toggle-container">
      <label for="new-events" class="form-label">New events are added to plans</label>
      <% if (userSettings.newEventsAddedToPlans === true) { %>
        <input id="new-events" type="checkbox" data-toggle="toggle" data-style="ios" checked>
      <% } else { %>  
        <input id="new-events" type="checkbox" data-toggle="toggle" data-style="ios">
      <% } %>
    </div>
    <div class="toggle-container">
      <label for="votes-ended" class="form-label">All participants finish voting on an item / poll</label>
      <% if (userSettings.allParticipantsVoted === true) { %>
        <input id="votes-ended" type="checkbox" data-toggle="toggle" data-style="ios" checked>
      <% } else { %>  
        <input id="votes-ended" type="checkbox" data-toggle="toggle" data-style="ios">
      <% } %>
    </div>
  </div>
  
  <%- include('partials/footer'); %>
  <script>
    $('input[data-toggle="toggle"]').bootstrapToggle();
  </script>
</body>

</html>